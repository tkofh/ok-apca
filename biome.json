{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noStaticElementInteractions": "error",
				"useAriaPropsSupportedByRole": "error",
				"useValidAutocomplete": "error"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "error",
				"noForEach": "error",
				"noUselessFragments": "error",
				"noUselessEscapeInRegex": "error",
				"useDateNow": "error",
				"useSimplifiedLogicExpression": "error"
			},
			"correctness": {
				"noUndeclaredVariables": "error",
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedPrivateClassMembers": "error",
				"noMissingVarFunction": "error",
				"noUnknownPseudoClass": "error",
				"noUnknownPseudoElement": "error",
				"useHookAtTopLevel": "error",
				"useImportExtensions": "error",
				"noPrivateImports": "error"
			},
			"performance": {
				"noAccumulatingSpread": "error",
				"noBarrelFile": "off",
				"noReExportAll": "error"
			},
			"style": {
				"noDefaultExport": "error",
				"noNamespace": "error",
				"noNegationElse": "error",
				"noParameterProperties": "error",
				"noRestrictedGlobals": "error",
				"noShoutyConstants": "error",
				"noCommonJs": "error",
				"noDescendingSpecificity": "error",
				"noEnum": "error",
				"noExportedImports": "error",
				"useBlockStatements": "error",
				"useCollapsedElseIf": "error",
				"useConsistentArrayType": {
					"level": "error",
					"options": { "syntax": "shorthand" }
				},
				"useExplicitLengthCheck": "error",
				"useFilenamingConvention": {
					"level": "error",
					"options": { "requireAscii": true, "filenameCases": ["kebab-case"] }
				},
				"useForOf": "error",
				"useFragmentSyntax": "error",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false,
						"requireAscii": true,
						"conventions": [
							{
								"selector": { "kind": "variable" },
								"formats": ["camelCase", "CONSTANT_CASE"]
							},
							{ "selector": { "kind": "typeLike" }, "formats": ["PascalCase"] },
							{ "selector": { "kind": "function" }, "formats": ["camelCase"] }
						]
					}
				},
				"useNodeAssertStrict": "error",
				"useShorthandAssign": "error",
				"useThrowNewError": "error",
				"useThrowOnlyError": "error",
				"useConsistentCurlyBraces": "error",
				"useConsistentMemberAccessibility": {
					"level": "error",
					"options": { "accessibility": "noPublic" }
				},
				"useArrayLiterals": "error",
				"noProcessEnv": "error",
				"noRestrictedTypes": "error",
				"noSubstr": "error",
				"useTrimStartEnd": "error"
			},
			"suspicious": {
				"noConsole": "error",
				"noEmptyBlockStatements": "error",
				"noEvolvingTypes": "error",
				"noDuplicateCustomProperties": "error",
				"useAwait": "error",
				"useErrorMessage": "error",
				"useNumberToFixedDigitsArgument": "error",
				"useAdjacentOverloadSignatures": "error",
				"noIrregularWhitespace": "error",
				"useStrictMode": "error"
			},
			"nursery": {
				"useSortedClasses": "error",
				"useExplicitType": "off"
			},
			"security": {
				"noSecrets": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "always"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"css": {
		"linter": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"html": {
		"experimentalFullSupportEnabled": true,
		"formatter": {
			"indentScriptAndStyle": true
		}
	},
	"files": {
		"includes": [
			"**",
			"**/*.vue",
			"!node_modules",
			"!dist",
			"!*.min.js",
			"!pnpm-lock.yaml",
			"!docs",
			"!.claude",
			"!.nuxt",
			"!.output"
		]
	},
	"overrides": [
		{
			"includes": ["*.config.ts", "*.config.js", "**/*.config.ts", "**/*.config.js"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					},
					"correctness": {
						"noUndeclaredVariables": "off",
						"noUnusedVariables": "off",
						"useHookAtTopLevel": "off"
					},
					"suspicious": {
						"useStrictMode": "off"
					}
				}
			}
		},
		{
			"includes": ["packages/playground/**/*.ts", "packages/playground/**/*.vue"],
			"javascript": {
				"globals": [
					"defineNuxtConfig",
					"defineNuxtPlugin",
					"defineNuxtRouteMiddleware",
					"definePageMeta",
					"navigateTo",
					"useAsyncData",
					"useFetch",
					"useHead",
					"useLazyAsyncData",
					"useLazyFetch",
					"useNuxtApp",
					"useRoute",
					"useRouter",
					"useRuntimeConfig",
					"useState"
				]
			}
		}
	]
}
